# Production Environment Variables for ScholarSeek
# Copy this file to .env.production and fill in the values

# Django Core Settings
DJANGO_SECRET_KEY=your-secret-key-here-generate-a-new-one
DJANGO_ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,your-server-ip
DEBUG=False

# Database Configuration (PostgreSQL recommended for production)
DB_NAME=scholarseek
DB_USER=scholarseek_user
DB_PASSWORD=your-secure-database-password
DB_HOST=localhost
DB_PORT=5432

# CORS Settings (Frontend URLs)
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# HTTPS/SSL Settings
USE_HTTPS=True

# Email Configuration (for error reporting)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com
ADMIN_EMAIL=admin@yourdomain.com

# Redis Cache (optional, recommended for production)
REDIS_URL=redis://localhost:6379/1

# External APIs
# Add any API keys for external services here